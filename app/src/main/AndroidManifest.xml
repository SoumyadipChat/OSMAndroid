<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soumyadc.onestopmusic">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/osm_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/osm_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name=".PlayHandler"/>
        <receiver android:name=".PauseHandler"/>
        <receiver android:name=".PrevHandler"/>
        <receiver android:name=".NextHandler"/>
        <receiver android:name=".CloseHandler"/>
    </application>

</manifest>